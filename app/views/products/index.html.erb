<div class="container">
  <div class="row">
    <div class="wrapper">
      <h1>Products</h1>
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th>Title<%# sort_link "title" %></th>
            <th>Description<%# sort_link "title" %></th>
            <th>Owner<%# sort_link "title" %></th>
            <th>Price<%# sort_link "price" %></th>
          </tr>
        </thead>
        <tbody>
          <% @products.each do |product| %>
            <tr>
              <td><%= product.title %></td>
              <td>
                <%= product.description %>
                <% if current_user && current_user == product.user %>
                  <%= link_to 'Edit', edit_product_path(product) %>

                <% end %>
              </td>
              <td><%= product.user.email.gsub(/@\w*.\w*/, '').gsub('.', ' ').titleize %></td>
              <td><%= product.price %>â‚¬</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
